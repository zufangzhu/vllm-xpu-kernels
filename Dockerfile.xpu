FROM intel/deep-learning-essentials:2025.2.2-0-devel-ubuntu24.04 AS vllm-base

RUN apt clean && apt-get update -y && \
    apt-get install -y --no-install-recommends --fix-missing \
    curl \
    ffmpeg \
    git \
    libsndfile1 \
    libsm6 \
    libxext6 \
    libgl1 \
    lsb-release \
    numactl \
    wget \
    vim \
    python3.12 \
    python3.12-dev \
    python3-pip

RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.12 1
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.12 1

RUN apt remove -y intel-opencl-icd libze-intel-gpu1 libze-dev libze-intel-gpu1 libze1 libigc2 libigdfcl2
RUN apt install -y intel-ocloc
#install umd
COPY umd /opt/umd
RUN dpkg -i --force-all /opt/umd/*deb || true && apt install -f -yqq 

RUN python3 -m pip config set global.break-system-packages true 

WORKDIR /workspace/vllm-xpu-kernels
COPY . .

RUN --mount=type=cache,target=/root/.cache/pip \
    pip install --no-cache-dir \
    -r requirements.txt

RUN --mount=type=cache,target=/root/.cache/pip \
    pip install --extra-index-url=https://download.pytorch.org/whl/xpu -e . -v